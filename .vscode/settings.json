{
  "yaml.schemas": {
    "./schemas/recipe.schema.json": [
      "**/*.recipe.yaml",
      "**/*.recipe.yml"
    ],
    "./schemas/menu.schema.json": [
      "**/*.menu.yaml",
      "**/*.menu.yml"
    ]
  },
  "json.schemas": [
    {
      "fileMatch": ["*.recipe.json"],
      "url": "./schemas/recipe.schema.json"
    },
    {
      "fileMatch": ["*.menu.json"],
      "url": "./schemas/menu.schema.json"
    }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true
}
