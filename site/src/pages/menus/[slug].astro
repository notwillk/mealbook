---
import MenuDetailPage from '../../components/MenuDetailPage';
import type { Props } from '../../utils/menus';
export { getMenuStaticPaths as getStaticPaths } from '../../utils/menus';

const { data: menu, url } = Astro.props as Props;

const title = menu.name;
const description = menu.description;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <MenuDetailPage menu={menu} url={url} />
  </body>
</html>
