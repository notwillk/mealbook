{
  "name": "mealbook-site",
  "version": "0.0.1",
  "description": "an HTML site for mealbook recipes and menus",
  "scripts": {
    "predev": "pnpm run generate:types",
    "prebuild": "pnpm run generate:types",
    "build": "ASTRO_TELEMETRY_DISABLED=1 astro build",
    "dev": "ASTRO_TELEMETRY_DISABLED=1 astro dev",
    "format": "prettier --write .",
    "generate:types": "pnpm exec json2ts -i ../schemas/menu.schema.json -o src/types/generated/menu.d.ts && pnpm exec json2ts -i ../schemas/recipe.schema.json -o src/types/generated/recipe.d.ts"
  },
  "keywords": [],
  "author": "notwillk",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "@astrojs/react": "^4.2.0",
    "iso8601-duration": "^2.1.3",
    "lucide-react": "^0.552.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "astro": "^5.15.3",
    "autoprefixer": "^10.4.21",
    "json-schema-to-ts": "^3.1.1",
    "json-schema-to-typescript": "^15.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.0",
    "tailwindcss": "^3.4.18"
  }
}
